generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Sosmed {
  id        String    @id @default(cuid())
  name      String    @unique
  url       String
  Page      Page[]
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model Project {
  id            String    @id @default(cuid())
  title         String
  description   String
  feature       String[]
  technology    String[]
  githubUrl     String
  liveUrl       String
  thumbnail     String
  photo String[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt
  Page          Page[]
  Skills        Skill[]   @relation("SkillOnProject")
}

model Skill {
  id              String           @id @default(cuid())
  name            String
  icon            String
  WorkExperiences WorkExperience[] @relation("SkillOnWorkExperience")
  Projects        Project[]        @relation("SkillOnProject")
  Page            Page[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime?        @updatedAt
}

model WorkExperience {
  id             String    @id @default(cuid())
  position       String
  employmenttype String
  company        String
  location       String
  locationtype   String
  description    String[]
  startDate      DateTime
  endDate        DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime? @updatedAt
  Page           Page[]
  Skills         Skill[]   @relation("SkillOnWorkExperience")
}

model Page {
  id               String          @id @default(cuid())
  introduction     String
  profilePicture   String
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  Sosmed           Sosmed?         @relation(fields: [sosmedId], references: [id])
  sosmedId         String?
  Skill            Skill?          @relation(fields: [skillId], references: [id])
  skillId          String?
  Project          Project?        @relation(fields: [projectId], references: [id])
  projectId        String?
  WorkExperience   WorkExperience? @relation(fields: [workExperienceId], references: [id])
  workExperienceId String?
}
